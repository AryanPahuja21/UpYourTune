generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  provider Provider
  streams  Stream[]
  upvotes  Upvote[]
}

model Stream {
  id      String     @id @default(cuid())
  type    StreamType
  active  Boolean    @default(true)
  upvotes Upvote[]
  userId  String
  user    User       @relation(fields: [userId], references: [id])
}

model Upvote {
  id       String @id @default(cuid())
  userId   String
  streamId String
  user     User   @relation(fields: [userId], references: [id])
  stream   Stream @relation(fields: [streamId], references: [id])

  @@unique([userId, streamId])
}

enum StreamType {
  Youtube
  Spotify
}

enum Provider {
  Google
}
